<div class="well">
  <h6 class="text-center">My Recent Tweets</h6>
  <table class="table borderless table-hover">
    <col width="60%">
    <col width="40%">
    <thead>
      <tr>
        <th><!--placeholder for tweet --></th>
        <th><!--placeholder for date --></th>
      </tr>
    </thead>
    <tbody>
      <% @user_data.user_timeline[0..3].each do |tweet| %>
        <tr>
          <td><p class="mini"><%= tweet.text %><p></td>
          <td><p class="mini-time"><%= time_ago_in_words(tweet.created_at) %> ago</p></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= link_to "New Tweet +", new_tweet_path, class: "btn btn-primary" %><br>
    <%= link_to "(view all my tweets)", tweets_path, class: "all-tweets" %>
  </div>
</div>
